<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="8dp">

        <ImageView
            android:id="@+id/form_image_view"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:src="@drawable/ic_form" />

        <TextView
            android:id="@+id/formId_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/form_image_view"
            android:layout_toRightOf="@id/form_image_view"
            android:text="@string/form_id"
            android:textColor="@android:color/black"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/formTitle_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/formId_text_view"
            android:layout_toEndOf="@id/form_image_view"
            android:text="@string/form_title"
            android:textColor="@android:color/black"
            android:layout_toRightOf="@id/form_image_view" />
    </RelativeLayout>
</androidx.cardview.widget.CardView>